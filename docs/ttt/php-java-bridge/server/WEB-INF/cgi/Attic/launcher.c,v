  for(*cmd=len=0, i=2, argc-=2; argc--; i++) {
    len += 1+strlen(argv[i]);
    if(len>=sizeof(cmd)) abort();
    strcat(cmd, argv[i]);
    if(argc) strcat(cmd, " ");
